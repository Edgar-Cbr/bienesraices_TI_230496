extends ../layout/admin

block contenido
    div(class="py-5 bg-gray-100 min-h-screen")
        h1(id="titulo" class="text-5xl my-10 font-extrabold text-center text-emerald") Perfil 

        div(class="mt-10 flex flex-col items-center justify-center gap-6")
            div(class="w-full md:w-3/4 lg:w-1/2 bg-white shadow-xl rounded-lg overflow-hidden")
                div(class="p-6 bg-gradient-to-r from-celadon to-emerald text-center text-white")
                    if usuario.foto
                        img(src=`/uploads/${usuario.foto}`, alt=`Foto de perfil de ${usuario.nombre}`, class="rounded-full w-28 h-28 mx-auto border-4 border-white shadow-lg")
                    else
                        img(src="/images/default-profile.png", alt="Foto de perfil por defecto", class="rounded-full w-28 h-28 mx-auto border-4 border-white shadow-lg")
                    h2(class="text-2xl font-bold mt-4")= usuario.nombre || "Usuario"
                    p(class="text-sm font-light")= usuario.email || "Correo no especificado"

                div(class="px-8 py-5 bg-white")
                    h3(class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2") Detalles del Perfil

                    p(class="text-gray-600 text-sm font-medium mb-2") Nombre Completo:
                        span(class="text-gray-900 block text-lg font-normal")= usuario.nombre

                    p(class="text-gray-600 text-sm font-medium mb-2") Correo Electr√≥nico:
                        span(class="text-gray-900 block text-lg font-normal")= usuario.email

                    p(class="text-gray-600 text-sm font-medium mb-2") Alias:
                        span(class="text-gray-900 block text-lg font-normal")= usuario.alias || "No especificado"

                    p(class="text-gray-600 text-sm font-medium mb-2") Fecha de Nacimiento:
                        span(class="text-gray-900 block text-lg font-normal")= usuario.fechaDeNacimiento || "No especificada"

